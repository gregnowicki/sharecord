<div id="pins" class="transitions-enabled">
  <% @pins.each do |pin| %>  
    <div class="box panel panel-default">  
      <% if pin.image.url.present? %> 
        <%= link_to image_tag(pin.image.url(:medium)), pin %></td>
      <% else %>
        <%= link_to image_tag("sharecord/public/noimg.png"), pin %></td>
      <% end %>

      <div class="panel-body">
        <%= pin.description %>
      <div class="user">
        <%= pin.user.email if pin.user %>
      </div>
        <% if pin.user == current_user %>
        <div class="actions">
          <%= link_to 'Edit', edit_pin_path(pin), class: "actions"  %></td>
          <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } , class: "actions" %></td>
        </div>
        <% end %>
      </div>  
    </div>
  <% end %>
</div>

